(define (domain blocksworld)
  (:requirements :strips :typing)
  (:types block)
  (:predicates
    (on ?b1 - block ?b2 - block)
    (ontable ?b - block)
    (clear ?b - block)
    (handempty)
    (holding ?b - block)
  )
  (:action pick-up
    :parameters (?b - block)
    :precondition (and (clear ?b) (ontable ?b) (handempty))
    :effect (and (not (ontable ?b))
                 (not (clear ?b))
                 (not (handempty))
                 (holding ?b))
  )
  (:action put-down
    :parameters (?b - block)
    :precondition (holding ?b)
    :effect (and (ontable ?b)
                 (clear ?b)
                 (handempty)
                 (not (holding ?b)))
  )
  (:action stack
    :parameters (?b - block ?b2 - block)
    :precondition (and (holding ?b) (clear ?b2))
    :effect (and (not (holding ?b))
                 (handempty)
                 (on ?b ?b2)
                 (clear ?b)
                 (not (clear ?b2)))
  )
  (:action unstack
    :parameters (?b - block ?b2 - block)
    :precondition (and (on ?b ?b2) (clear ?b) (handempty))
    :effect (and (holding ?b)
                 (clear ?b2)
                 (not (clear ?b))
                 (not (handempty))
                 (not (on ?b ?b2)))
  )
)
